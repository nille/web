<div class="mx-auto grid max-w-lg gap-5 lg:max-w-none lg:grid-cols-3">
    {%- for post in collections.post -%}
        <div class="flex flex-col overflow-hidden rounded-lg shadow-lg hover:shadow-2xl">
            <div class="flex-shrink-0">
                <img class="h-48 w-full object-cover" src="/images/posts/{{ post.data.image }}" alt="">
            </div>
            <div class="flex flex-1 flex-col justify-between bg-white p-6">
                <div class="flex-1">
                    {%- for topic in collections.post.topics -%}
                    <p class="text-sm font-medium text-indigo-600">
                        <a href="#" class="hover:underline">{{ topic.data }}</a>
                    </p>
                    {%- endfor -%}
                    <a href="#" class="mt-2 block">
                        <p class="text-xl font-semibold text-gray-900">{{ post.data.title }}</p>
                        <p class="mt-3 text-base text-gray-500">{{ post.data.preamble }}</p>
                    </a>
                </div>
                <div class="mt-6 flex items-center">
                    <div class="flex-shrink-0">
                        <a href="#">
                            <span class="sr-only">Brenna Goyette</span>
                            <img class="h-10 w-10 rounded-full" src="https://images.unsplash.com/photo-1550525811-e5869dd03032?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2&w=256&h=256&q=80" alt="">
                        </a>
                    </div>
                    <div class="ml-3">
                        <p class="text-sm font-medium text-gray-900">
                            <a href="#" class="hover:underline">Brenna Goyette</a>
                        </p>
                        <div class="flex space-x-1 text-sm text-gray-500">
                            <time datetime="{{ post.data.date.toLocaleDateString("sv") }}">{{ post.data.date.toLocaleDateString("sv") }}</time>
                            <span aria-hidden="true">&middot;</span>
                            <span>4 min read</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {%- endfor -%}

